<title>Rolodex</title>

<div id="contact_form">
  <% remote_form_for @contact do |f| %>
    <%= render :partial => '/contacts/form', :object => f %>
    <%= f.submit 'Add a contact' %>
  <% end %>
</div>
<div id="group_form">
  <% remote_form_for @group do |f| %>
    <%= render f %>
    <%= f.submit 'Add a group' %>
  <% end %>
</div>
<div>
  <div id="groups_list">
    <div id="groups_title">My Lists<button>+</button></div> 
      <%= render @groups %>
    </div>
  </div>
</div>
<div>
  <div id="contacts_list">
    <div id="contacts_title"></div>
      <%= render @contacts %>
    </div>
  </div>
</div>

